<h1><%= @task.title %></h1>
<%= @task.details %>
<% if @task.completed %>
  <p>This task is completed</p>
<% else %>
  <p>This task is not completed</p>
<% end %>
<%= link_to "Update task", task_edit_path %>
<%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Back to list", tasks_path %>
